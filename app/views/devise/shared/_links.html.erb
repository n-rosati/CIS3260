<div class="d-flex justify-content-center">
  <%- if controller_name != 'sessions' %>
  <%= link_to "Have Account?", new_session_path(resource_name), class:'btn btn-primary m-3 btn-shadow' %><br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Need Account?", new_registration_path(resource_name), class:'btn btn-primary m-3 btn-shadow'  %><br />
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot Password?", new_password_path(resource_name), class:'btn btn-primary m-3 btn-shadow'  %><br />
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Did Not Receive Confirmation Email?", new_confirmation_path(resource_name), class:'btn btn-primary m-3 btn-shadow'  %><br />
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Did Not Receive Unlock Email?", new_unlock_path(resource_name), class:'btn btn-primary m-3 btn-shadow'  %><br />
  <% end %>

  <%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
  <%= link_to "Log In with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post, class:'btn btn-primary m-3 btn-shadow'  %><br />
  <% end %>
  <% end %>
</div>
